<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="#F4F1F1">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/UserRegistration_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="User Registration" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration Details"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/UserRegistration_ImageView_ProfilePic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserRegistration_toolbar" />

    <ImageView
        android:id="@+id/UserRegistration_ImageView_ProfilePic"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/default_profilepic"
        app:layout_constraintTop_toBottomOf="@+id/UserRegistration_toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tap above to add Image"
        android:textAlignment="center"
        android:textColor="#8C8989"
        android:textSize="10sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/UserRegistration_editTextText_Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserRegistration_ImageView_ProfilePic"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/UserRegistration_editTextText_Name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Enter Name"
        android:padding="8dp"
        android:elevation="10dp"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserRegistration_ImageView_ProfilePic" />

    <EditText
        android:id="@+id/UserRegistration_editTextText_PhoneNumber"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:hint="Enter Phone Number"
        android:padding="8dp"
        android:inputType="phone"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserRegistration_editTextText_Name" />

    <EditText
        android:id="@+id/UserRegistration_editTextText_Email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:hint="Enter Email"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserRegistration_editTextText_PhoneNumber" />

    <EditText
        android:id="@+id/UserRegistration_editTextText_Password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:hint="Enter Password"
        android:padding="8dp"
        android:elevation="10dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserRegistration_editTextText_Email" />

    <EditText
        android:id="@+id/UserRegistration_editTextText_Repassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:hint="Reenter Password"
        android:padding="8dp"
        android:elevation="10dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserRegistration_editTextText_Password" />

    <Button
        android:id="@+id/UserRegistration_Button_Signup"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="32dp"
        android:text="Register / SignUp"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserRegistration_editTextText_Repassword" />

</androidx.constraintlayout.widget.ConstraintLayout>