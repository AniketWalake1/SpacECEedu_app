<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:padding="20dp"
        android:background="@drawable/registration_background"
        android:orientation="vertical">

    <TextView
        android:id="@+id/registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_centerHorizontal="true"
        android:text="@string/registration"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAppearance="@style/registratio"
        android:gravity="top"
        android:layout_marginBottom="15dp" />

    <ImageView
        android:id="@+id/UserRegistration_ImageView_ProfilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/profile" />


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:startIconDrawable="@drawable/ic_baseline_person_24"
        >

        <EditText
            android:id="@+id/UserRegistration_editTextText_Name"
            android:layout_width="300dp"
            android:layout_height="54dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/enter_user_"
            android:textColor="@color/black"
            android:shadowColor="@color/black"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:startIconDrawable="@drawable/ic_baseline_local_phone_24">

        <EditText
            android:id="@+id/UserRegistration_editTextText_PhoneNumber"
            android:layout_width="300dp"
            android:layout_height="54dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/enter_phone"
            android:textColor="@color/black"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:startIconDrawable="@drawable/ic_baseline_email_24">

        <EditText
            android:id="@+id/UserRegistration_editTextText_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="@string/enter_email" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:startIconDrawable="@drawable/ic_baseline_lock_24">

        <EditText
            android:id="@+id/UserRegistration_editTextText_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:inputType="textPassword"
            android:hint="@string/password" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle"
        android:layout_marginTop="10dp"
        app:startIconDrawable="@drawable/ic_baseline_lock_24">

        <EditText
            android:id="@+id/UserRegistration_editTextText_Re_Password"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:endIconMode="password_toggle"
            android:background="@drawable/rounded_edittext"
            android:inputType="textPassword"
            android:hint="@string/re_enter_pa"
            android:textColor="@color/black"/>

    </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/uploadImageError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="Do you want to continue without Image?"
            android:textSize="17dp"
            android:visibility="invisible"
            android:textColor="@color/logError"/>

    <Button
        android:id="@+id/UserRegistration_Button_Signup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/registration_background_btn"
        android:elevation="4dp"
        android:backgroundTint="#0A9999"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="@string/register_si"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>